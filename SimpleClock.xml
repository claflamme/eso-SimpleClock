<GuiXml>
	<Controls>
		<TopLevelControl name="SimpleClockLocal" mouseEnabled="true" movable="true" virtual="true">

			<Dimensions x="120" y="20" />

			<OnUpdate>
				sc:updateLocalTime()
			</OnUpdate>

			<OnMoveStop>
				sc:savePositions()
			</OnMoveStop>

			<Controls>
				<Label scale="1.0" name="$(parent)Label" font="ZoFontWindowTitle" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER">
					<AnchorFill />
				</Label>
			</Controls>

		</TopLevelControl>
	</Controls>
</GuiXml>