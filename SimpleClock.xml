<GuiXml>
	<Controls>
		<TopLevelControl name="SimpleClock" mouseEnabled="true" movable="true">

			<Dimensions x="120" y="20" />

			<OnUpdate>
				updateLocalTime()
			</OnUpdate>

			<OnMoveStop>
				savePositions()
			</OnMoveStop>

			<Controls>
				<Label scale="1.0" name="$(parent)LocalLabel" font="ZoFontWindowTitle" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER">
					<AnchorFill />
				</Label>
			</Controls>

		</TopLevelControl>
	</Controls>
</GuiXml>