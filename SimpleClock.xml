<GuiXml>
	<Controls>
		<TopLevelControl name="SimpleClock" mouseEnabled="true" movable="true" virtual="true">

			<OnUpdate>
				sc:updateLocalTime()
			</OnUpdate>

			<OnMoveStop>
				sc:savePositions()
			</OnMoveStop>

			<Controls>
				<!--<Backdrop name="$(parent)BG" inherits="ZO_ThinBackdrop" />-->
				<Label scale="1.0" name="$(parent)Label" color="FFFFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER">
					<AnchorFill />
				</Label>
			</Controls>

		</TopLevelControl>
	</Controls>
</GuiXml>